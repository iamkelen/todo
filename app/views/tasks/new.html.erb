<div class='row justify-content-center'>
  <div class='col-6'>
    <h2 class='text-center'>New task:</h2>

    <% if @task.errors.any? %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>
          <%= pluralize(@task.errors.count, "error") %> prohibited
          this task from being saved:
        </strong>
        <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with(model: [@project, @project.tasks.new], local: true) do |form| %>
      <div class='form-group'>
        <%= form.label :title, for: 'title' %><br>
        <%= form.text_field :title, id: 'title', class: 'form-control', autofocus: 'true' %>
      </div>
      <div class='form-group'>
        <%= form.label :date, for:'date' %><br>
        <%= form.date_field :date, id: 'date', class: 'form-control' %>
      </div>
      <div class='text-center'>
        <%= form.submit 'Create', class: 'btn btn-primary' %>
      </div>
    <% end %>
    <br />

    <div class='text-center'>
      <%= link_to 'Back', projects_path %>
    </div>

  </div>
</div>
