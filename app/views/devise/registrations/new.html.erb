<div class='row justify-content-center'>
  <div class='col-4'>
    <h2 class='text-center'><%= t('.sign_up') %></h2>

    <% if notice %>
      <div class='alert alert-info'>
        <%= notice %>
      </div>
    <% end %>
    <% if alert %>
      <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <%= alert %>
      </div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, for: 'inputEmail' %><br />
        <%= f.email_field :email, id: 'inputEmail', class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
        <small id="emailHelp" class="form-text text-muted"><%= t('devise.registrations.small_id') %></small>
      </div>

      <div class="form-group">
        <%= f.label :password, for: 'inputPassword' %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, id: 'inputPassword', class: 'form-control', autocomplete: "new-password", placeholder: 'New password' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, for: 'passwordConfirmation' %><br />
        <%= f.password_field :password_confirmation, id: 'passwordConfirmation', class: 'form-control', autocomplete: "new-password", placeholder: 'Confirm password' %>
      </div>

      <div class='text-center'>
        <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <div class='text-center mt-3'>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
